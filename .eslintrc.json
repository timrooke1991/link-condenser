{
  "env": {
    "browser": true,
    "commonjs": true,
    "es6": true
  },
  "parserOptions": {
    "sourceType": "module",
    "ecmaFeatures": {
      "jsx": true
    },
    "ecmaVersion": 2018
  },
  "globals": {
    "localStorage": true,
    "expect": true,
    "it": true,
    "describe": true,
    "beforeEach": true,
    "window": true,
    "document": true,
    "chaiExpect": true
  },
  "plugins": [
    "react",
    "import",
    "chai-friendly",
    "filenames"
  ],
  "rules": {
    "class-methods-use-this": 0,
    "comma-dangle": 0,
    "no-plusplus": 0,
    "object-curly-newline": [
      "error",
      {
        "ObjectExpression": {
          "consistent": true,
          "multiline": true,
          "minProperties": 1
        },
        "ObjectPattern": {
          "consistent": true,
          "multiline": true,
          "minProperties": 2
        },
        "ImportDeclaration": {
          "consistent": true,
          "multiline": true,
          "minProperties": 2
        },
        "ExportDeclaration": {
          "consistent": true,
          "multiline": true,
          "minProperties": 2
        }
      }
    ],
    "object-property-newline": 1,
    "prefer-destructuring": 0,
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": [
      2,
      {
        "allowTernary": true
      }
    ],
    "react/jsx-filename-extension": 0,
    "react/destructuring-assignment": 0,
    "filenames/match-regex": [
      1,
      "([a-z]+)([A-Z]*)([a-z]+)([.test]+)"
    ],
    "filenames/match-exported": [
      1,
      "camel"
    ],
    "filenames/no-index": 1,
    "max-len": [
      1,
      {
        "code": 100
      }
    ],
    "camelcase": 1,
    "no-extend-native": 1,
    "func-names": 1,
    "jsx-a11y/alt-text": 1,
    "jsx-a11y/anchor-is-valid": 1,
    "jsx-a11y/click-events-have-key-events": 1,
    "jsx-a11y/mouse-events-have-key-events": 1,
    "jsx-a11y/label-has-for": 1,
    "jsx-a11y/label-has-associated-control": 1,
    "jsx-a11y/no-static-element-interactions": 1,
    "no-underscore-dangle": 1,
    "no-unused-vars": 1,
    "consistent-return": 1,
    "eqeqeq": 1,
    "default-case": 1,
    "no-param-reassign": 1,
    "no-class-assign": 1,
    "no-restricted-globals": 1,
    "no-shadow": 1,
    "import/named": 1,
    "import/prefer-default-export": 1,
    "react/prop-types": 1,
    "react/button-has-type": 1,
    "react/prefer-stateless-function": 1,
    "react/no-access-state-in-setstate": 1,
    "react/no-unused-state": 1,
    "react/forbid-prop-types": 1
  },
  "extends": ["airbnb", "prettier"]
}